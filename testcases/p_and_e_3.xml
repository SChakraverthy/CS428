    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-44</zmin>
    <zmax>44</zmax>
  </obstacle>
  
  <agent>
    <name>Pursuer</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>90</x> <y>0</y> <z>-40</z> </position>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>0</speed>
	  <color> <r>0</r> <g>0</g> <b>1</b> </color>
    </initialConditions>
    <goalSequence>
      <seekDynamicTarget>
		<targetName>Quarry</targetName>
		<random>false</random>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekDynamicTarget>
    </goalSequence>

  </agent>
  
  <agent>
    <name>Evader</name>
    <initialConditions>
      <position> <x>92</x> <y>0</y> <z>41</z> </position>
      <radius>0.5</radius>
      <direction> <x>0</x> <y>0</y> <z>1</z> </direction>
      <speed>0</speed>
	  <color> <r>1</r> <g>0</g> <b>0</b> </color>
    </initialConditions>
    <goalSequence>
      <fleeDynamicTarget>
		<targetName>Quarry</targetName>
		<random>false</random>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </fleeDynamicTarget>
    </goalSequence>

  </agent>
  
  <agent>
    <name>Quarry</name>
    <initialConditions>
      <radius>0.5</radius>
      <position> <x>90</x> <y>0</y> <z>40</z> </position>
      <direction> <x>0</x> <y>0</y> <z>-1</z> </direction>
      <speed>0</speed>
	  <color> <r>0</r> <g>0</g> <b>0</b> </color>
    </initialConditions>
    <goalSequence>
      <seekStaticTarget>
        <targetLocation> <x>10</x> <y>0</y> <z>-40</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
      </seekStaticTarget>
    </goalSequence>

  </agent>
  
